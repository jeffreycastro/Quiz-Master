= simple_nested_form_for @exam do |f|
  = f.error_notification

  .field
    = f.input :name

  = f.fields_for :exam_items do |ei|
    .field
      = ei.input :question, label: "Question"
      = ei.link_to_remove do
        = "Delete"

  = f.link_to_add "Add new question", :exam_items

  .actions
    = f.button :submit, "Save"